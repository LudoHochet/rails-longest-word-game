<div class="new-game">
  <h3>New game</h3>
  <ul class="list-letter">
    <% @letters.each do |letter| %>
    <li><%= letter.upcase %></li>
    <% end %>
  </ul>
</div>

<div>
  <form action="/score" class="answer" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" class="answer-word">
    <input type="submit" value="play">
  </form>
</div>
